{
  "compilerOptions": {
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "./build",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5","es6","dom"],
    "experimentalDecorators": true,
    "removeComments":true,
    "preserveConstEnums": true,
    "moduleResolution":"node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "noImplicitAny": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "config",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ]
}
